<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!-- Essa parte é da ação no botão -->
        <shape>
            <stroke android:width="2dp" android:color="#0054a6" />

            <solid android:color="#0054a6" />
            <padding android:left="4dp" android:top="7dp" android:right="4dp" android:bottom="4dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item>
        <!-- Essa parte é do botão estático -->
        <shape>

            <stroke android:width="2dp" android:color="#3b5998" />

            <padding android:left="8dp" android:top="14dp" android:right="8dp" android:bottom="8dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>