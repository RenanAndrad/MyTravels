<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!-- Essa parte é da ação no botão -->
        <shape>
            <solid android:color="#00008B" />
            <stroke android:width="1dp" android:color="#00008B" />
            <corners android:radius="16dp" />
            <padding android:left="4dp" android:top="7dp" android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>
    <item>
        <!-- Essa parte é do botão estático -->
        <shape>
            <gradient android:startColor="#0000CD" android:endColor="#0000CD" android:angle="270" />
            <stroke android:width="3dp" android:color="#0000CD" />
            <corners android:radius="16dp" />

            <padding android:left="8dp" android:top="14dp" android:right="8dp" android:bottom="8dp" />
        </shape>
    </item>
</selector>